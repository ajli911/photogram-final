<h1>List of users</h1>

<div>
  <table border = "1" >
    <tr>
      <th>Username</th>
      <th>Private?</th>
      <th></th>
      <th></th>
    </tr>
    
    <% @list_of_users.each do |user| %>
      <tr>
        <td><%= user.username%></td>
        <td>
          <% if user.private == true %>
            <p>Yes</p>
          <% else %>
            <p>No</p>
          <% end %>
        </td>
        <td>
          <% if current_user == nil %>
          <% else %>
            <p> follow </p>
          <% end %>
        </td>
        <td><a href = "/users/<%=user.username%>">Show details</a></td>
      </tr>
    <% end %>
  </table>
</div>
